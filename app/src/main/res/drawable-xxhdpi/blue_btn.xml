<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item >
                <shape android:shape="oval" >
                    <corners android:radius="0dp" />
                    <stroke android:width="3.75dp" android:color="#1D7CF2" />
                    <size android:width="60dp"
                        android:height="60dp"/>
                </shape>
            </item>
            <item android:left="3.75dp" android:top="3.75dp" android:right="3.75dp" android:bottom="3.75dp">
                <shape android:shape="oval">

                    <stroke android:width="5.25dp" android:color="#4d98f5" />
                    <corners android:radius="4dp" />
                    <size android:width="60dp"
                        android:height="60dp"/>

                </shape>
            </item>

        </layer-list>
    </item>
</selector>